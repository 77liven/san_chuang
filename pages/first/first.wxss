.container {
  align-self: flex-start;
  display: flex;
  justify-content: flex-start;
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  padding: 0;
  margin: 0;
  background-color: transparent;
  /* background-color: rgb(253, 240, 217);  */
  /* background-color: rgb(255, 0, 0);  */
  
  overflow:scroll;
}
.background {
  position: absolute; /* 绝对定位 */
  top: 200rpx; /* 从顶部开始 */
  left: 0; /* 从左侧开始 */
  width: 100%; /* 宽度占满 */
  height: 100%; /* 高度占满 */
  object-fit: fill; /* 填充整个容器，可能拉伸 */
  z-index: -1; /* 置于最下层 */
}
.image1-container {
  display: flex;
  flex-direction: column; 
  align-items: center; 
  justify-content: center;

  position: relative;
  background-color: transparent;
  width: 100%;
  height: 400rpx;
  margin-top: 0; /* 移除顶部间距 */

}

.custom-image1{

  width: 90%;
  border-radius: 40rpx; /* 设置四角圆角，值可调整 */
  overflow: hidden; /* 隐藏超出圆角的部分 */
  height: 380rpx;
  margin-top: 10rpx;
}
.bu1-container{
  position: absolute;
  /* background-color: rgb(139, 64, 224); */
  width: 100%;
  height: 200rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 250rpx;
}
.navbu{

  /* background-color: violet; */
  width: 100%;
  gap:80rpx;
}
.fullscreen-image {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.8); /* 半透明背景 */
  z-index: 9999;
}
.fullscreen {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.swiper .wx-swiper-dot {
  width: 16rpx; /* 初始宽度 */
  height: 8rpx;
  background-color: #cccccc; /* 正常状态颜色 */
  border-radius: 8rpx; /* 初始圆角 */
  transition: all 0.3s ease; /* 添加过渡效果，0.3秒，ease曲线 */
}

.swiper .wx-swiper-dot-active {
  width: 30rpx; /* 激活宽度 */
  border-radius: 10rpx; /* 激活圆角 */
  background-color: #c5c7ac; /* 激活颜色 */
  transition: all 0.3s ease; /* 确保激活状态也有过渡 */
}
.button1{
  background-color: rgba(255, 255, 255, 0.8);  
  height: 150rpx;
}
.video-wrapper {
  background-color: transparent;
  width: 100%;
  position: relative;
  padding-top: 0%;
  height: 500rpx; /* 确保有高度 */
  margin-bottom: 0; /* 移除底部间距 */
}
.video-item {
  width: 100%; 
  background-color: rgb(0, 0, 0) ;   
  mask-image: linear-gradient(to bottom, rgb(255, 255, 255)40%, rgba(0, 0, 0, 0) 100%);
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 60%, rgba(0, 0, 0, 0) 100%);
}
.swiper-wrapper{
  width: 100%;
  height: 300rpx;
  padding-top: 10rpx;
  margin-top:0rpx;
  /* margin-bottom: 130rpx; */
  position: relative;

  background-color: transparent;
  padding-top: 0rpx;
  box-sizing: border-box; /* 包含 padding 在高度内 */
  display: flex;
  justify-content: center;

}
.swiper {
  width: 90%;
  height: 250rpx; /* 轮播图的高度 */
  position: relative; /* 使轮播图按顺序排列在视频下方 */
  margin-top: 0; /* 去掉原来的 margin-top 设置 */
  padding-top: 0rpx; /* 设置轮播图距离视频的间距 */
  /* z-index: 1; 确保轮播图在视频的下方 */
  border-radius: 40rpx; /* 设置四角圆角，值可调整 */
  overflow: hidden; /* 隐藏超出圆角的部分 */
  margin-top: 30rpx;

}

.slide-image {
  width: 100%;
  height: 100%;
}
