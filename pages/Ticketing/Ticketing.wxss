/* 卡片zu */
.card_group{
  display: flex;
  justify-content: center;
  width: 90%;
  height: 40%;
  background-color: #471a91;
  border-radius: 20px;
  overflow: hidden;
  position: relative; /* 确保子元素定位正确 */
  margin: 30rpx;
  /* 控制元素间间距 */
}
.card {
  width: 40%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 20px;
margin-left: 2.5%;
margin-right: 2.5%;
  overflow: hidden;
  position: relative; /* 确保子元素定位正确 */
}

.card-image {
  width: 100%;
  height: 200px;
  display: block;
}

.card-title {
  display: block;
  text-align: center;
  font-size: 16px;
  color: #000000;
  margin: 10px 0;
}

/* 价格和描述在一行 */
.card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: red; */
  padding: 0 10px;
  margin-bottom: 0px;
}

.card-price {
  font-size: 16px;
  color: #FF0000;
}

.card-desc {
  font-size: 14px;
  color: #000000;
}