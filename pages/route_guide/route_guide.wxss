/* 容器 */
.container {
  /* background-color: turquoise; */
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  padding: 0;
}
.map-area {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  /* background-color: violet; */
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 可缩放拖拽的视图 */
.map-view {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
/* 背景图片 */
.background {
  width: 100%;
  max-width: 100%; /* 限制最大宽度 */
  max-height: 100%; /* 限制最大高度 */

  /* background-color: violet; */
}
.background-1 {
  width: 100%;
height: 100%;
position: absolute;
  /* background-color: violet; */
}

/* 左侧列表 */
.sidebar {
  width: 20%;
  height: 100%;
  background-color: #ac3737;
  position: absolute;
  top: 200rpx;
  left: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
}

.sidebar-item {
  background-color: wheat;
  height: 50px;
  display: flex;
  align-items: center;
  padding-left: 10px;
  flex-direction: column;
}

.icon {
  background-color: white;
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.sidebar-item text {
  font-size: 16px;
  color: #000000;
}

/* 顶部选择框 */
/* 顶部导航栏 */
.topbar {
  position: absolute;
  top: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 10px;
}

.topbar-item {
  padding: 10px 15px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 5px;
  cursor: pointer;
  transition: color 0.3s;
  color: black; /* 默认文字颜色 */
}

/* 选中时文字变蓝 */
.topbar-item.active {
  color: #007BFF; /* 蓝色 */
  font-weight: bold;
}
