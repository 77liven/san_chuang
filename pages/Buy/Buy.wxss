.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  border-top: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.tab-item .active {
  color: #007AFF;
}
.container {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  padding: 0;
  background-color: rgb(255, 249, 239); /* 容器背景色 */
  overflow: hidden;
}

.button-group {
  padding-top: 100rpx;
  background-color: wheat;
  display: flex;

  gap: 80rpx;

}

.button-item {
  width: 250rpx!important;
  height: 150rpx;
}

.button-box {
  width: 100%;
  height: 100%;
  background: rgba(0, 122, 255, 0.8);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
}

.description {
  text-align: center;
  color: #333;
  font-size: 28rpx;
}