.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: #fff;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.content {
  width: 100%;
  padding: 20rpx;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}

.vip-section, .order-section, .travel-section {
  width: 85%; /* 宽度为 85% */
  margin: 20rpx auto; /* 居中显示 */
  margin-top: 60rpx;
  padding-top: 40rpx;
  background: rgba(0, 122, 255, 0.8);
  border-radius: 40rpx; /* 圆角处理 */
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.vip-title, .order-title, .travel-title {
  color: #fff;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
}

.vip-buttons {
  display: flex;
  justify-content: space-between; /* 均匀分布按钮 */
  padding: 20rpx;
}

.vip-button {
  background: #fff;
  color: rgba(0, 122, 255, 0.8);
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 10rpx;
  font-size: 28rpx;
  width: 30% !important; /* 确保按钮有足够宽度 */
}



.order-buttons, .travel-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.order-dot, .travel-dot {
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  display: flex;
  border-top: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.tab-item .active {
  color: #007AFF;
}
