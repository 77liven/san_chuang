/* 容器 */
.container {
  width: 100%;
  height: 100vh;
  background-color: transparent;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content:center;


  flex-direction: column;
  display: flex;  
  padding: 0%;
}

/* 顶部导航 */
.header {
  height: 50px;
  width:100% ;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10px;
  background-color: #ffffff;
}



.title {

  font-size: 18px;
  font-weight: bold;
  color: #000000;
}

/* 内容区域 */
.content {
  width: 100%;
  height: 100%;
  background-color: transparent;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content:center;
    flex-direction: column;
    display: flex;  
  /* 定义主轴      flex-direction: column;
  主轴对齐方式  justify-content: flex-start;
  交叉轴对齐方式   align-content:center; */
    /* overflow:hidden; */
   
  }
.item_group{
  /* 一行为一个group */
  display: flex;
  justify-content: center;
  width: 90%;
  height: 40%;
  background-color: transparent;

  overflow: hidden;
  position: relative; /* 确保子元素定位正确 */
  margin: 10rpx;
  /* 控制元素间间距 */
}
/* 单个项 */
.item {
  /*   mode fit  稳定保持照片比例 但要求照片一样大 */
  background-color: red;
  width: 40%;
  height: 100%;
  background-color: #ffffff;
margin-left: 5%;
margin-right: 5%;
  overflow: hidden;
  position: relative; /* 确保子元素定位正确 */
}

.image {
  width: 100%;
  height: 200px;
  display: block;
}

.caption {
  background-color: transparent;
  display: block;
  text-align: center;
  font-size: 14px;
  color: #000000;
  margin-top: 5px;
}
.video-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 关闭按钮 */
.close-button {
  position: absolute;
  top: 20px;
  right: 20px;
  background: rgba(255, 0, 0, 0.8);
  color: white;
  font-size: 18px;
  border: none;
  padding: 8px 12px;
  border-radius: 5px;
}

/* 静音按钮 */
.mute-btn {
  position: absolute;
  bottom: 20px;
  right: 20px;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 18px;
  border: none;
  padding: 8px 12px;
  border-radius: 5px;
}