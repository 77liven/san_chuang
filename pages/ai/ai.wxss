.container {
  background-color: #E6F0FA;
  min-height: 100vh;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.preset-questions {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
}

.question-item {
  width: 480rpx;
  height: 80rpx;
  background-color: #ffffff;
  border: 1rpx solid #d3d3d3;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.question-item text {
  font-size: 28rpx;
  color: #666666;
}

.arrow {
  color: #999999;
  font-size: 28rpx;
}

.message-area {
  margin-top: 400rpx;
  margin-bottom: 140rpx;
}

.message-item {
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  max-width: 80%;
}

.user-message {
  background-color: #ffffff;
  align-self: flex-end; /* 用户消息靠右 */
}

.ai-message {
  background-color: #f0f0f0;
  align-self: flex-start; /* AI 消息靠左 */
}

.message-item text {
  font-size: 28rpx;
  color: #333333;
}

.input-area {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
}

.input-box {
  flex: 1;
  height: 80rpx;
  background-color: #ffffff;
  border: 1rpx solid #d3d3d3;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.input-box input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #999999;
  border: none;
  background: none;
}

.send-btn {
  width: 100rpx;
  height: 80rpx;
  background-color: #07c160;
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: 20rpx;
}